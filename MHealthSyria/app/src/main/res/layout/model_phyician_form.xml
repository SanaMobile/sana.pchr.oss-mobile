<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/llLastName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/last_name_colon"
            android:id="@+id/tvLastName"
            android:layout_marginTop="@dimen/default_form_margin_top"
            android:textSize="@dimen/default_form_label_text_size" />

        <EditText
            android:gravity="end"
            android:textDirection="anyRtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textCapSentences"
            android:ems="10"
            android:id="@+id/etLastName"
            android:textSize="@dimen/default_form_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/llFirstName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/first_name_colon"
            android:id="@+id/tvFirstName"
            android:layout_marginTop="@dimen/default_form_margin_top"
            android:textSize="@dimen/default_form_label_text_size" />
        <EditText
            android:gravity="end"
            android:textDirection="anyRtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textCapSentences"
            android:ems="10"
            android:id="@+id/etFirstName"
            android:textSize="@dimen/default_form_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/email_colon"
            android:id="@+id/tvEmail"
            android:layout_marginTop="@dimen/default_form_margin_top"
            android:textSize="@dimen/default_form_label_text_size" />

        <EditText
            android:text=""
            android:gravity="end"
            android:textDirection="anyRtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etEmailAddress"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/default_form_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/phone_colon"
            android:id="@+id/tvPhoneNumber"
            android:layout_marginTop="@dimen/default_form_margin_top"
            android:textSize="@dimen/default_form_label_text_size" />

        <EditText
            android:text=""
            android:gravity="end"
            android:textDirection="anyRtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhoneNumber"
            android:textSize="@dimen/default_form_text_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/type"
            android:id="@+id/tvType"
            android:layout_marginTop="@dimen/default_form_margin_top"
            android:textSize="@dimen/default_form_label_text_size"
            android:layout_gravity="bottom" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spType"
            android:layout_gravity="bottom" />
    </LinearLayout>


</LinearLayout>
